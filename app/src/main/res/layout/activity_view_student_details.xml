<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.ViewStudentDetailsActivity">

    <TextView
        android:id="@+id/student_detail_tittle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Student Details"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="15dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/student_detail_tittle">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/txtName"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Name:"
                android:layout_centerVertical="true"
                android:textColor="@color/black"
                android:textSize="@dimen/stu_head_size"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/view_stu_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/txtName"
                android:hint="email"
                android:textSize="@dimen/stu_detail_size" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/txtEmail"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="40"
                android:text="Email:"
                android:layout_centerVertical="true"
                android:textColor="@color/black"
                android:textSize="@dimen/stu_head_size"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/view_stu_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/txtEmail"
                android:hint="email"
                android:inputType="none"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:textSize="@dimen/stu_detail_size" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtdepart"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Department:"
                android:layout_centerVertical="true"
                android:textColor="@color/black"
                android:textSize="@dimen/stu_head_size"
                android:textStyle="bold"
                />
            <EditText
                android:id="@+id/view_stu_depart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/txtdepart"
               android:hint="sst"
                android:textSize="@dimen/stu_detail_size" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/txtprogram"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Program:"
                android:textColor="@color/black"
                android:textSize="@dimen/stu_head_size"
                android:textStyle="bold"
                />
            <EditText
                android:id="@+id/view_stu_program"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/txtprogram"
                android:hint="bsse"
                android:textSize="@dimen/stu_detail_size" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtgender"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Gender"
                android:textColor="@color/black"
                android:layout_centerVertical="true"
                android:textSize="@dimen/stu_head_size"
                android:textStyle="bold"
                />
            <EditText
                android:id="@+id/view_stu_gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/txtgender"
                android:inputType="none"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:hint="male"
                android:textSize="@dimen/stu_detail_size" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txta"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Address"
                android:textColor="@color/black"
                android:maxLines="2"
                android:textSize="@dimen/stu_head_size"
                android:textStyle="bold"

                />

            <EditText
                android:id="@+id/view_stu_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/txta"
                android:hint="address"
                android:textSize="@dimen/stu_detail_size" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/textphone"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Phone:"
                android:layout_centerVertical="true"
                android:textColor="@color/black"
                android:textSize="@dimen/stu_head_size"
                android:textStyle="bold"

                />
            <EditText
                android:id="@+id/view_stu_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/textphone"
                android:hint="0300 xxxxx"
                android:textSize="@dimen/stu_detail_size" />

        </RelativeLayout>

        <Button
            android:id="@+id/editUpdate_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/buttonbackground"
            android:text="Update"
            android:textAlignment="center"
            android:textColor="@color/white_color"
            android:textSize="16sp" />
        <Button
            android:id="@+id/delete_stu_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/buttonbackground"
            android:text="Delete"
            android:textAlignment="center"
            android:textColor="@color/white_color"
            android:textSize="16sp" />
    </LinearLayout>


    <ProgressBar
        android:id="@+id/view_stu_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="84dp"
        android:layout_marginEnd="8dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

</androidx.constraintlayout.widget.ConstraintLayout>